<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	           <!-- 상위 이름 -->
<mapper namespace="mapper.pro.comment">


          <!-- 안쪽에서 바깥으로 실행 -->
      <insert id="Comint" parameterType="project.dto.Comdto">
 
            <!-- 넣을 필드 -->
<selectKey keyProperty="commentid" resultType="int" order="BEFORE">
select seq_comments.nextval from dual
</selectKey>

<!-- <selectKey keyProperty="postid" resultType="int" order="BEFORE">
select seq_posts.nextval from dual
</selectKey>  중복 불가 --> 


insert into comments (commentid, postid, userid, commentdate, commenttext)
values (#{commentid}, #{postid}, 'adminid1', sysdate, #{commenttext})

<!-- insert into comments (postid, userid, title, content, postdate, notify, viewcount)
values (#{postid}, 'adminid1', #{title}, #{content}, sysdate, 'Y', 0) -->

       
      </insert> 
        
        
        <!--  댓글 전체 목록 -->
	  <select id="Comsel" resultType="project.dto.Comdto">
	  select * from comments order by commentid  
	  </select>
        
        
        <!--  댓글 목록 하나 -->
	     <select id="Comselid" resultType="project.dto.Comdto" parameterType="int"> 
		select * from comments  
		where postid = #{postid}
		</select>
        
        
        
        <!--  댓글 삭제 -->
         <delete id="Comdel" parameterType="project.dto.Comdto">
			delete from comments
			where commentid = #{commentid}
         </delete>
         
         
         <!--  댓글 수정 -->
         <select id="Comup" resultType="int">
			update comments
        	set commenttext = #{commenttext}
        	where commentid = #{commentid}
         </select>
         
         
        
</mapper>