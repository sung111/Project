             SELECT * FROM (
    SELECT ROWNUM AS rnum, inner_data.* FROM (
        SELECT postid, title, viewcount, postdate, userid
        FROM posts
        ORDER BY postdate DESC
    ) inner_data
     <![CDATA[
    WHERE ROWNUM <= #{indexEnd}
    ]]>
)
  <![CDATA[
  WHERE rnum >= #{indexStart}
  ]]>
      
         
         
         
        </select> 
        
        
        
        
        
        
        
        
        
